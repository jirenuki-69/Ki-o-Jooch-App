<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:scaleType="centerCrop"
            android:src="@drawable/producto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="back button"
                android:src="@drawable/back_button_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:text="Nombre del Producto"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Urna id volutpat lacus laoreet non curabitur gravida arcu. Ultricies mi quis hendrerit dolor magna eget est. Lectus proin nibh nisl condimentum. Congue nisi vitae suscipit tellus mauris a diam maecenas sed. Augue ut lectus arcu bibendum. Nisi est sit amet facilisis magna etiam. Ipsum a arcu cursus vitae congue mauris rhoncus. Pharetra diam sit amet nisl suscipit adipiscing bibendum. Eu feugiat pretium nibh ipsum consequat nisl vel pretium. Mattis ullamcorper velit sed ullamcorper morbi. Nunc congue nisi vitae suscipit tellus. Sit amet tellus cras adipiscing enim eu turpis egestas."
                android:textAlignment="textStart"
                android:textColor="@color/gray_desc"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:text="35.00 MXN"
                android:textAlignment="center"
                android:textColor="@color/primary_red"
                android:textSize="26sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceedPayment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/secondary_red"
                android:fontFamily="@font/arial_rounded_mt_bold"
                android:text="Agregar al Carrito"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>